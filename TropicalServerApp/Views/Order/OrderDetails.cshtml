<body>
    <h2>OrderDetails</h2>
    <table>
        <tr>
            <td>
                Search : <input type="text" id="txtSearch" />
                <input type="button" value="Search" id="btnSearch" />
                <input type="button" value="Get All User" id="btnAllUser" />
            </td>
        </tr>
        <tr>
            <td>
