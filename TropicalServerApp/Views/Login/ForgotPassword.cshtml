
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - TropicalServer Login</title>
    @Styles.Render("~/Content/css")

    <link href="~/Content/TropicalStyles/Login.css" rel="stylesheet" />
</head>
<body>
    <div id="container">
        <div id="header" class="imageDisplay">
            <img id="headerImg" height="100" src="@Url.Content("~/Images/Header.jpg")" />

        </div>
        <div class="main">
            <h2>Forgot Password</h2>

            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <hr />
                    <div class="text-success">
                        @ViewBag.Message
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Your Email</label>
                        @Html.TextBox("EmailID", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-success" />
                        </div>
                    </div>

                </div>
            }
            <div>
                @Html.ActionLink("Back to Login", "Login")
            </div>
        </div>
        </div>
</body>
</html>
